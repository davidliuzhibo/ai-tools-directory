generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model accounts {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  users             users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "accounts_userId_fkey")
}

model admins {
  id     String      @id
  userId String      @unique
  role   admins_role @default(EDITOR)
  users  users       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model categories {
  id          String      @id
  name        String      @unique
  slug        String      @unique
  description String?     @db.Text
  icon        String?
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime
  tools       tools[]
  use_cases   use_cases[]
}

model comments {
  id             String     @id
  content        String     @db.Text
  userId         String
  toolId         String
  parentId       String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime
  comments       comments?  @relation("commentsTocomments", fields: [parentId], references: [id], onDelete: Cascade)
  other_comments comments[] @relation("commentsTocomments")
  tools          tools      @relation(fields: [toolId], references: [id], onDelete: Cascade)
  users          users      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([parentId])
  @@index([toolId])
  @@index([userId])
}

model favorites {
  id        String   @id
  userId    String
  toolId    String
  createdAt DateTime @default(now())
  tools     tools    @relation(fields: [toolId], references: [id], onDelete: Cascade)
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, toolId])
  @@index([toolId])
  @@index([userId])
}

model ranking_metrics {
  id                 String   @id
  toolId             String   @unique
  githubStars        Int      @default(0)
  githubUrl          String?
  productHuntVotes   Int      @default(0)
  productHuntUrl     String?
  appStoreRating     Float    @default(0)
  appStoreUrl        String?
  monthlyActiveUsers Int      @default(0)
  lastUpdated        DateTime @default(now())
  tools              tools    @relation(fields: [toolId], references: [id], onDelete: Cascade)
}

model sessions {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  users        users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "sessions_userId_fkey")
}

model tools {
  id                   String            @id
  name                 String
  slug                 String            @unique
  description          String?           @db.Text
  fullDescription      String?           @db.LongText
  logoUrl              String?
  websiteUrl           String?
  teamOrigin           tools_teamOrigin  @default(OVERSEAS)
  platformAvailability Json?
  pricingType          tools_pricingType @default(FREEMIUM)
  pricingDetails       String?           @db.Text
  rankingScore         Float             @default(0)
  isPublished          Boolean           @default(true)
  isFeatured           Boolean           @default(false)
  categoryId           String
  createdAt            DateTime          @default(now())
  updatedAt            DateTime
  comments             comments[]
  favorites            favorites[]
  ranking_metrics      ranking_metrics?
  categories           categories        @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([rankingScore])
}

model use_cases {
  id             String                @id
  title          String
  description    String?               @db.Text
  contentType    use_cases_contentType
  contentUrl     String?
  thumbnailUrl   String?
  textContent    String?               @db.LongText
  categoryId     String
  relatedToolIds Json?
  order          Int                   @default(0)
  createdAt      DateTime              @default(now())
  updatedAt      DateTime
  categories     categories            @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}

model users {
  id            String      @id
  name          String?
  email         String      @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime
  accounts      accounts[]
  admins        admins?
  comments      comments[]
  favorites     favorites[]
  sessions      sessions[]
}

enum admins_role {
  ADMIN
  EDITOR
}

enum use_cases_contentType {
  TEXT
  IMAGE
  VIDEO
}

enum tools_teamOrigin {
  DOMESTIC
  OUTBOUND
  OVERSEAS
}

enum tools_pricingType {
  FREE
  PAID
  FREEMIUM
}
