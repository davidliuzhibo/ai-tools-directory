# 数据库配置
DATABASE_URL="mysql://user:password@localhost:3306/aitools"

# Next Auth配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# GitHub API Token (用于爬虫和GitHub Stars数据采集)
# 获取方式: https://github.com/settings/tokens
# 无需特殊权限，公开仓库数据可不设置此token（但有API限制）
GITHUB_TOKEN="your-github-token"

# Product Hunt API Token (用于Product Hunt投票数据采集)
# 获取方式: https://www.producthunt.com/v2/oauth/applications
# 需要创建应用并获取API Token
PRODUCTHUNT_API_TOKEN="your-producthunt-api-token"

# 腾讯云COS配置
COS_SECRET_ID="your-secret-id"
COS_SECRET_KEY="your-secret-key"
COS_BUCKET="your-bucket-name"
COS_REGION="ap-guangzhou"

# 管理员邮箱（用于后台登录验证）
ADMIN_EMAIL="your-email@example.com"

# Cron Job 密钥（用于保护定时任务端点）
# 在 Vercel 环境变量中设置，用于验证 cron 请求
CRON_SECRET="your-cron-secret-key"
